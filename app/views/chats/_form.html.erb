<%= form_for @chat do |f| %>
  <% if @chat.errors.any? %>
  <ul>
    <% @chat.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="field">
    <%= label_tag :chat_receiver_id, 'Receiver', class: 'control-label' %><br />
    <%= f.collection_select :receiver_id, @other_users, :id, :name_with_role, prompt: 'Select a recipient', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :message, class: 'control-label' %>
    <%= f.text_area :message, size: "10x5", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Send", class: 'btn btn-primary' %>
  </div>
<% end %>
