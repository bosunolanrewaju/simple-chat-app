<h1>Your Chat Inbox</h1>
<%= link_to("New Chat", new_chat_path, class: 'btn btn-success') %>
<hr>
<% if @chats.present? %>
  <ul class="chat" type="1">
    <% @chats.each do |chat| %>
      <li>
        <p><strong>From: </strong><%= message_sender(chat) %></p>
        <p><strong>To: </strong><%= message_receiver(chat) %></p>
        <p><strong>Date: </strong><%= chat.created_at %></p>
        <p><strong>Message: </strong></p>
        <p>
          <%= chat.message %>
        </p>
        <% if current_user.admin? %>
          <%= link_to "Edit", edit_chat_path(chat) %> |
          <%= link_to "Delete", chat_path(chat), method: :delete %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No chat messages in your inbox</p>
<% end %>

